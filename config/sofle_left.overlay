#include <input/processors.dtsi>
#include <dt-bindings/zmk/input_transform.h>
#include "cirque.dtsi"

&glidepoint_split_listener {
    status = "okay";
    input-processors = 
        <&zip_xy_transform 1>,
        <&zip_xy_scaler 3 1>,
        <&zip_temp_layer 11 500>;

    scroller {
        layers = <12>;                      // Dein Scroll-Layer Index
        input-processors = 
            <&zip_xy_transform 1>,         // Auch beim Scrollen 90Â° drehen!
            <&zip_xy_to_scroll_mapper>,    // X/Y zu Scroll umwandeln
            <&zip_scroll_scaler 1 4>;      // Scroll-Geschwindigkeit drosseln
    };
};
