#include "cirque.dtsi"

&glidepoint_split {
    status = "okay";
    device = <&glidepoint>;
    input-processors = <&zip_xy_transform <(INPUT_TRANSFORM_90 | INPUT_TRANSFORM_Y_INVERT)>>;
};

&pro_micro_i2c {
    status = "okay";

    glidepoint: glidepoint@2a {
        compatible = "cirque,pinnacle";
        reg = <0x2a>;
        status = "okay";
        dr-gpios = <&gpio1 1 (GPIO_ACTIVE_HIGH)>; 
        sensitivity = "3x";
        sleep;
    };
};