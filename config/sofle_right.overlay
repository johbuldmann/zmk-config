#include <input/processors.dtsi>
#include <dt-bindings/zmk/input_transform.h>

&pro_micro_i2c {
    status = "okay";

    glidepoint: glidepoint@0 {
        compatible = "cirque,pinnacle";
        reg = <0x2a>;
        status = "okay";
        dr-gpios = <&pro_micro 1 (GPIO_ACTIVE_HIGH)>; 
        sensitivity = "3x";
        sleep;
        // no-taps;
    };
};